<%= render 'layouts/landing_nav' %>

<h1 class="center">Create Category</h1>


<%= render "/shared/errors", obj: @category %>

<section class="container">
<div class="row well">
	<div class="col-xs-12">
		<%= form_for(@category, :html => {class: "form-horizontal", role: "form" }) do |f| %>
		<div class="form-group">
			<div class="control-label col-sm-2">
				<%= f.label :name %>
			</div>
			<div class="col-sm-10">
				<%= f.text_field :name, class:"form-control", placeholder: "Enter category name...", autofocus: true %>
			</div>
		</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit class: "btn btn-success btn-md" %>
					<%= link_to "Cancel", articles_path, class: "btn btn-warning btn-md" %>
				</div>
			</div>
	<% end %>
	</div>
	<div class="clearfix"></div>
</section>

<%= render 'articles/footer' %>