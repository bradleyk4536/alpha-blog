<h1 class="center">Signup for alpha blog</h1>

<%= render "/shared/errors", obj: @user %>

<section class="container">
<div class="row well">
	<div class="col-xs-12">
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form" }) do |f| %>
		<div class="form-group">
			<div class="control-label col-sm-2">
				<%= f.label :username %>
			</div>
			<div class="col-sm-10">
				<%= f.text_field :username, class:"form-control", placeholder: "Enter username...", autofocus: true %>
			</div>
		</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :email %><br>
				</div>
				<div class="col-sm-10">
					<%= f.email_field :email, class: "form-control", placeholder: "Enter email..."%>
				</div>
			</div>
		<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :password %><br>
				</div>
				<div class="col-sm-10">
					<%= f.password_field :password, class: "form-control", placeholder: "Enter password..."%>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit "Sign up", class: "btn btn-success btn-md" %>
					<%= link_to "Cancel", articles_path, class: "btn btn-warning btn-md" %>
				</div>
			</div>
	<% end %>
	</div>
</div>
	<div class="clearfix"></div>
</section>
