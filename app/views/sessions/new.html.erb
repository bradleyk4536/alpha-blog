<%= render 'layouts/landing_nav' %>

<h1 class="center">Log in</h1>
<%= render 'layouts/messages' %>
	<section class="container">
		<div class="row well">
			<div class="col-xs-12">
				<%= form_for(:session, :html => {class: "form-horizontal", role: "form" }, url: login_path ) do |f| %>
				<div class="form-group">
					<div class="control-label col-sm-2">
						<%= f.label :email %>
					</div>
					<div class="col-sm-10">
						<%= f.email_field :email, class:"form-control", placeholder: "Enter email...", autofocus: true %>
					</div>
				</div>
					<div class="form-group">
						<div class="control-label col-sm-2">
							<%= f.label :password %><br>
						</div>
						<div class="col-sm-10">
							<%= f.password_field :password, class: "form-control", autocomplete: "off" %>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-2 col-sm-10">
							<%= f.submit "Log in", class: 'btn btn-success btn-md' %>
							<%= link_to "Cancel", articles_path, class: "btn btn-warning btn-md" %>
						</div>
					</div>
	<% end %>
			</div>
		</div>
	</section>


<%= render '/articles/footer' %>
